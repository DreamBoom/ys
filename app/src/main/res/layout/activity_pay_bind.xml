<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="card.com.allcard.activity.PayBind">

    <ImageView
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" />

    <include layout="@layout/title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="55dp"
        android:text="手机号"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/size14" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@null"
        android:hint="请输入绑定的手机号"
        android:inputType="phone"
        android:maxLength="11"
        android:textColor="@color/black3"
        android:singleLine="true"
        android:textColorHint="@color/grey91"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/size13" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@color/grey" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="姓名"
        android:layout_marginTop="20dp"
        android:textColor="@color/grey75"
        android:textSize="@dimen/size14" />
    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="50dp"
        android:textColor="@color/black3"
        android:layout_marginRight="50dp"
        android:background="@null"
        android:hint="请输入绑定人的真实姓名"
        android:maxLength="4"
        android:singleLine="true"
        android:textColorHint="@color/grey91"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/size13" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@color/grey" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="身份证"
        android:layout_marginTop="20dp"
        android:textColor="@color/grey75"
        android:textSize="@dimen/size14" />
    <EditText
        android:id="@+id/et_num"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@null"
        android:textColor="@color/black3"
        android:hint="请输入绑定人的身份证号"
        android:maxLength="20"
        android:singleLine="true"
        android:textColorHint="@color/grey91"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/size13" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@color/grey" />
    <TextView
        android:text="验证码"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:textColor="@color/grey75"
        android:textSize="@dimen/size14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@null"
            android:hint="输入验证码"
            android:textColor="@color/black3"
            android:inputType="number"
            android:maxLength="6"
            android:singleLine="true"
            android:textColorHint="@color/grey91"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/size13" />


        <TextView
            android:id="@+id/send_code"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/btn_bg"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/tv_djs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="60秒后重试"
            android:textColor="@color/blue"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@color/grey" />

    <TextView
        android:id="@+id/img_ok"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="50dp"
        android:background="@drawable/btn_forget"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/size16" />
</LinearLayout>

