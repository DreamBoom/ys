<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".activity.RealName">

    <ImageView
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="239dp"
        android:layout_below="@+id/bar"
        android:background="@drawable/img_smrz_bg" />

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:padding="10dp"
        android:src="@mipmap/icon_back"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/close"
        android:layout_toEndOf="@+id/close"
        android:text="您已实名认证"
        android:textColor="@color/white"
        android:textSize="@dimen/size19" />

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="28dp"
        android:layout_toEndOf="@+id/close"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/im_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/user" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:text="姓名"
            android:textColor="@color/white"
            android:textSize="@dimen/info_size" />

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:text="410**********0000"
            android:textColor="@color/white"
            android:textSize="@dimen/info_size" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l1"
        android:layout_margin="32dp"
        android:background="@drawable/bg_pop">

        <TextView
            android:id="@+id/zl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="14dp"
            android:text="基本信息"
            android:textColor="@color/black3"
            android:textSize="@dimen/size14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/zl"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="14dp"
                android:text="用户名"
                android:textColor="@color/black3"
                android:textSize="@dimen/size13" />

            <TextView
                android:id="@+id/tv_real_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:padding="14dp"
                android:textColor="@color/grey75"
                android:textSize="@dimen/size13" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@color/grey" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="14dp"
                android:text="性别"
                android:textColor="@color/black3"
                android:textSize="@dimen/size13" />

            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:padding="14dp"
                android:textColor="@color/grey75"
                android:textSize="@dimen/size13" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@color/grey" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="14dp"
                android:text="出生日期"
                android:textColor="@color/black3"
                android:textSize="@dimen/size13" />

            <TextView
                android:id="@+id/tv_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:padding="14dp"
                android:textColor="@color/grey75"
                android:textSize="@dimen/size13" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@color/grey" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="14dp"
                android:text="详细地址"
                android:textColor="@color/black3"
                android:textSize="@dimen/size13" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:padding="14dp"
                android:textColor="@color/grey75"
                android:textSize="@dimen/size13" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>