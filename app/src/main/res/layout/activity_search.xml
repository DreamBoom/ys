<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Search">
    <ImageView
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" />
    <include layout="@layout/title"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey" />
    <LinearLayout
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:background="@mipmap/icon_xsbh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_id"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="50dp"
            android:background="@null"
            android:hint="请输入学生ID"
            android:singleLine="true"
            android:maxLength="8"
            android:inputType="numberSigned"
            android:textColorHint="@color/grey91"
            android:textColor="@color/black"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/size14" />

    </LinearLayout>
    <View
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey" />
    <LinearLayout
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:background="@mipmap/icon_xxlx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/et_type"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginStart="15dp"
            android:text="请选择查询类型"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:textColor="@color/grey91"
            android:textSize="@dimen/size14" />
        <ImageView
            android:layout_marginEnd="30dp"
            android:layout_gravity="center"
            android:background="@mipmap/icon_jt_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey" />
    <LinearLayout
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:background="@mipmap/icon_cxsj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/et_time1"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginStart="15dp"
            android:text="请选择开始时间"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:textColor="@color/grey91"
            android:textSize="@dimen/size14" />
        <TextView
            android:layout_gravity="center"
            android:text="~"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/et_time2"
            android:layout_width="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_height="38dp"
            android:text="请选择结束时间"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:textColor="@color/grey91"
            android:textSize="@dimen/size14" />
    </LinearLayout>
    <View
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey" />
    <TextView
        android:id="@+id/img_ok"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="25dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_bg"
        android:gravity="center"
        android:text="查询"
        android:textColor="@color/white"
        android:textSize="@dimen/size16" />
</LinearLayout>