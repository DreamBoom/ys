<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" />

    <FrameLayout
        android:layout_below="@+id/bar"
        android:id="@+id/title_click"
        android:layout_width="fill_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/close"
            android:src="@drawable/back_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:padding="10dp"
            android:layout_marginStart="10dp"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:textColor="@color/black3"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size17"
            android:layout_gravity="center" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/card"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_below="@+id/title_click"
        android:background="@drawable/btn_click_c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/t1"
            android:text="账户余额（元）"
            android:paddingStart="25dp"
            android:paddingTop="15dp"
            android:textSize="@dimen/size14"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/money"
            android:layout_below="@+id/t1"
            android:text="0.0"
            android:paddingStart="25dp"
            android:textSize="@dimen/size33"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/t2"
            android:layout_below="@+id/money"
            android:text="学生编号："
            android:paddingStart="25dp"
            android:drawablePadding="10dp"
            android:drawableStart="@mipmap/icon_ye_xxbh"
            android:paddingTop="10dp"
            android:textSize="@dimen/size14"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/t3"
            android:text="消费卡号："
            android:layout_below="@+id/t2"
            android:paddingStart="25dp"
            android:drawablePadding="10dp"
            android:drawableStart="@mipmap/icon_ye_xfkh"
            android:paddingBottom="15dp"
            android:paddingTop="10dp"
            android:textSize="@dimen/size14"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tn"
        android:text="消费明细"
        android:textColor="@color/black3"
        android:textSize="@dimen/size15"
        android:layout_below="@+id/card"
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refresh"
        android:layout_below="@+id/tn"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white"
            app:srlAccentColor="@color/black"
            app:srlClassicsSpinnerStyle="Scale" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/grey" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <TextView
        android:id="@+id/no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="220dp"
        android:drawableTop="@drawable/img_zwsj"
        android:gravity="center"
        android:text="暂无数据"
        android:textColor="@color/grey91"
        android:textSize="@dimen/size13"
        android:visibility="gone" />
    <TextView
        android:id="@+id/no_web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="220dp"
        android:drawableTop="@drawable/img_wwl"
        android:gravity="center"
        android:text="网络异常，请刷新重试"
        android:textColor="@color/grey91"
        android:textSize="@dimen/size13"
        android:visibility="gone" />
</RelativeLayout>