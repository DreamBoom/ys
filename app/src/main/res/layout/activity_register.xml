<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" />

    <include
        android:id="@+id/title"
        layout="@layout/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bar" />

    <card.com.allcard.view.PercentRelativeLayout
        android:id="@+id/p_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="90dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册兰考市民卡账号"
            android:textColor="@color/black3"
            android:textSize="@dimen/size23"
            tools:ignore="MissingPrefix" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_login"
            android:gravity="center"
            android:paddingTop="12dp"
            android:text="输入手机号进行注册"
            android:textColor="@color/black6"
            android:textSize="@dimen/size13"
            tools:ignore="MissingPrefix" />
    </card.com.allcard.view.PercentRelativeLayout>


    <RelativeLayout
        android:id="@+id/account_login_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/p_view"
        android:layout_margin="48dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/zh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size13"
            android:textColor="@color/black6"
            android:text="手机号" />
        <EditText
            android:id="@+id/login_phone"
            android:layout_below="@+id/zh"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@null"
            android:cursorVisible="true"
            android:gravity="center|start"
            android:hint="请输入手机号"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:maxLength="11"
            android:textColor="@color/black3"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/size13" />


        <View
            android:id="@+id/line1"
            android:layout_height="0.5dp"
            android:layout_width="match_parent"
            android:layout_below="@+id/login_phone"
            android:background="@color/grey" />
        <TextView
            android:id="@+id/yzm"
            android:layout_marginTop="30dp"
            android:textSize="@dimen/size13"
            android:textColor="@color/black6"
            android:layout_below="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码" />
        <LinearLayout
            android:id="@+id/ll1"
            android:layout_below="@+id/yzm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/login_code"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center|start"
                android:hint="请输入验证码"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="16"
                android:textColor="@color/black3"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/size13" />

            <TextView
                android:id="@+id/send_code"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:background="@drawable/btn_forget"
                android:gravity="center"
                android:text="获取验证码"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_djs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:paddingRight="10dp"
                android:text="60秒后重试"
                android:textColor="@color/blue"
                android:visibility="gone" />

        </LinearLayout>
        <View
            android:layout_below="@+id/ll1"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/mm"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/ll1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size13"
            android:textColor="@color/black6"
            android:text="密码" />

        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/mm"
            android:background="@null"
            android:gravity="center|start"
            android:hint="请设置登录密码"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLength="12"
            android:textColor="@color/black3"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/size13" />

        <View
            android:layout_below="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey" />
    </RelativeLayout>

    <Button
        android:id="@+id/bt_register"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/account_login_ll"
        android:layout_marginStart="35dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_bg"
        android:text="注册并登录"
        android:textColor="@color/white"
        android:textSize="@dimen/size15" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/grey75"
            android:text="注册即代表已阅读并同意"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="《用户隐私协议》"
            android:textColor="@color/blue"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>


</RelativeLayout>
