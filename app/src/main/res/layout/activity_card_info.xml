<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:clipChildren="false">
    <ImageView
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" />

    <include
        android:id="@+id/title"
        android:layout_below="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/title" />
    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <recycler.coverflow.RecyclerCoverFlow
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </recycler.coverflow.RecyclerCoverFlow>
    </RelativeLayout>
    <TextView
        android:id="@+id/t1"
        android:gravity="center"
        android:text="基本信息"
        android:layout_below="@+id/rl1"
        android:textSize="@dimen/size14"
        android:textColor="@color/black3"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <card.com.allcard.view.PercentRelativeLayout
        android:layout_below="@+id/t1"
        android:background="@drawable/kfw_yy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/t2"
            android:layout_below="@+id/t1"
            android:layout_marginTop="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginBottom="15dp"
            android:text="持卡人"
            android:textSize="@dimen/size13"
            android:textColor="@color/black3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/name"
            android:layout_below="@+id/t2"
            android:layout_marginStart="35dp"
            android:textSize="@dimen/size13"
            android:textColor="@color/black6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/line1"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/name"
            android:background="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
        <TextView
            android:id="@+id/t3"
            android:layout_below="@+id/line1"
            android:layout_marginStart="35dp"
            android:text="身份证"
            android:textSize="@dimen/size13"
            android:textColor="@color/black3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/num"
            android:layout_below="@+id/t3"
            android:layout_marginTop="15dp"
            android:layout_marginStart="35dp"
            android:textSize="@dimen/size13"
            android:textColor="@color/black6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/line2"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/num"
            android:background="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
        <TextView
            android:id="@+id/t4"
            android:layout_below="@+id/line2"
            android:layout_marginStart="35dp"
            android:text="卡状态"
            app:width_percent="0.42"
            android:textSize="@dimen/size13"
            android:textColor="@color/black3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingPrefix" />
        <TextView
            android:layout_below="@+id/line2"
            android:layout_toEndOf="@+id/t4"
            android:text="卡类型"
            app:width_percent="0.5"
            tools:ignore="MissingPrefix"
            android:textSize="@dimen/size13"
            android:textColor="@color/black3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/state"
            android:layout_below="@+id/t4"
            android:layout_marginTop="15dp"
            android:layout_marginStart="35dp"
            android:text="正常"
            app:width_percent="0.42"
            android:textSize="@dimen/size13"
            android:textColor="@color/blue"
            tools:ignore="MissingPrefix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/line3"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"
            app:width_percent="0.38"
            android:layout_below="@+id/state"
            tools:ignore="MissingPrefix"
            android:background="@color/grey"
            android:layout_width="wrap_content"
            android:layout_height="0.5dp" />
        <TextView
            android:gravity="center"
            android:layout_toEndOf="@+id/state"
            android:layout_below="@+id/t4"
            android:layout_marginTop="15dp"
            android:text="社保卡"
            android:textSize="@dimen/size13"
            android:textColor="@color/text_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/line4"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:layout_toEndOf="@+id/line3"
            app:width_percent="0.5"
            tools:ignore="MissingPrefix"
            android:layout_below="@+id/state"
            android:background="@color/grey"
            android:layout_width="wrap_content"
            android:layout_height="0.5dp" />
    </card.com.allcard.view.PercentRelativeLayout>
    <TextView
        android:id="@+id/gs"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:text="卡挂失"
        android:textSize="@dimen/size13"
        android:background="@drawable/btn_bg"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>